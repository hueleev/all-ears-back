<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[LOG] %d{MM-dd HH:mm:ss} [%20.30logger.%15.15M] %highlight(%-5p) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="consoleAppender"/>
    </root>
</configuration>